@page
@model ToDo_List.Pages.ShoppingPages.ProductsPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Products</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Products.Id" />
            <div class="form-group">
                <label asp-for="Products.ProductName" class="control-label"></label>
                <input asp-for="Products.ProductName" class="form-control" />
                <span asp-validation-for="Products.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.ProductAmount" class="control-label"></label>
                <input asp-for="Products.ProductAmount" class="form-control" />
                <span asp-validation-for="Products.ProductAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.ProductPrice" class="control-label"></label>
                <input asp-for="Products.ProductPrice" class="form-control" />
                <span asp-validation-for="Products.ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.ShoppingId" class="control-label"></label>
                <select asp-for="Products.ShoppingId" class="form-control" asp-items="ViewBag.ShoppingId"></select>
                <span asp-validation-for="Products.ShoppingId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
