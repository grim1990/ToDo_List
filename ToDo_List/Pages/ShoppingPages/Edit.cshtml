@page
@model ToDo_List.Pages.ShoppingPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Shopping</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Shopping.Id" />
            <div class="form-group">
                <label asp-for="Shopping.ShoppingListName" class="control-label"></label>
                <input asp-for="Shopping.ShoppingListName" class="form-control" />
                <span asp-validation-for="Shopping.ShoppingListName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Shopping.IsCompleted" /> @Html.DisplayNameFor(model => model.Shopping.IsCompleted)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Shopping.ProductsId" class="control-label"></label>
                <input asp-for="Shopping.ProductsId" class="form-control" />
                <span asp-validation-for="Shopping.ProductsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shopping.ToDoId" class="control-label"></label>
                <select asp-for="Shopping.ToDoId" class="form-control" asp-items="ViewBag.ToDoId"></select>
                <span asp-validation-for="Shopping.ToDoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
